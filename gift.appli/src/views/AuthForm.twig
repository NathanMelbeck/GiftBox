{% extends "squelette/main.twig" %}

{% block content %}
    <fieldset class="bg-violet-300 mx-8 my-4 p-4 rounded-lg">
        <form method="POST" action="{{ url_for('connection') }}">
            <label for="email">Adresse e-mail :</label>
            <input type="email" name="email" id="email" required>
            <br><br>
            <label for="password">Mot de passe :</label>
            <input type="password" name="password" id="password" required>
            <br><br>

            <button class="bg-violet-400 mx-8 my-4 p-4 rounded-lg hover:bg-violet-200" type="submit">Se connecter</button>
        </form>

        <p>Vous n'avez pas encore de compte ?
            <div class="bg-violet-400 mx-8 my-4 p-4 rounded-lg hover:bg-violet-200">
                <a href="{{ url_for('register') }}">S'inscrire</a>
            </div>
        </p>
    </fieldset>
{% endblock %}


