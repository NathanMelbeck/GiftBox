{% extends "squelette/main.twig" %}




{% block content %}
<div>
    <h1>Catalogue</h1>
    <select name="genre[]" size="3" multiple="multiple">
        {% for categorie in categories %}
            <option value="{{ categorie.id }}">{{ categorie.libelle }}</option>
        {% endfor %}
    </select>

    <div>
        <form method="GET" action="{{ url_for('prestations') }}">
            <button type="submit" name="value" value="asc"
                    class="block shadow rounded-2xl p-1 px-3 font-medium block mx-2 mt-5 bg-gradient-to-r from-indigo-500 to-purple-500 text-white hover:from-purple-300 hover:to-indigo-500" >
                Tri Croissant
            </button>

            <button type="submit" name="value" value="desc"
                    class="block shadow rounded-2xl p-1 px-3 font-medium block mx-2 mt-5 bg-gradient-to-r from-indigo-500 to-purple-500 text-white hover:from-purple-300 hover:to-indigo-500" >
                Tri Décroissant
            </button>
        </form>

    </div>


</div>
    <div class="my-4 grid grid-cols-3 gap-4 px-4">
        {% for prestation in prestations %}
            <div class="bg-violet-300 rounded-lg p-4 flex flex-col px-4">
                <div class="flex justify-between items-center">
                    <div>
                        <h2 class="text-lg font-bold">{{ prestation.libelle }}</h2>
                        <p>{{ prestation.tarif }}€</p>
                        <p>{{ prestation.categorie }}</p>
                    </div>
                </div>
                <img src="{{ base_path() }}/img/{{ prestation.img }}" alt="{{ prestation.description }}" class="w-full h-auto mt-4">
                <p class="mt-4">{{ prestation.description }}</p>
                <a class="block shadow rounded-2xl p-1 px-3 font-medium block mx-2 mt-5 bg-gradient-to-r from-indigo-500 to-purple-500 text-white text-center hover:from-purple-300 hover:to-indigo-500"
                       href="{{ url_for('prestation', {'id': prestation.id},{'id': prestation.id}) }}">Détail</a>
            </div>
        {% endfor %}
    </div>


{% endblock %}

