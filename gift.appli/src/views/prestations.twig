{% extends "squelette/main.twig" %}

{% block content %}
    <div>
        <h1 class="text-2xl font-bold my-4 text-center font-sans tracking-wider">Catalogue</h1>

        <div>
            <form method="GET" action="{{ url_for(urlName, {'id': categoryId} ,{'id': prestation.id, 'categoryId': categoryId}) }}">
                <div class="bg-violet-200 rounded-lg p-4 flex flex-col px-4">
                    {% if value == 'desc' %}
                        <button type="submit" name="value" value="asc"
                                class="block rounded-2xl p-1 px-3 font-medium block mx-2 mt-5 bg-gradient-to-r from-indigo-500 to-purple-500 text-white hover:from-purple-300 hover:to-indigo-500" >
                            Trie : Prix Croissant
                        </button>
                    {% else %}
                        <button type="submit" name="value" value="desc"
                                class="block rounded-2xl p-1 px-3 font-medium block mx-2 mt-5 bg-gradient-to-r from-indigo-500 to-purple-500 text-white hover:from-purple-300 hover:to-indigo-500" >
                            Trie : Prix DÃ©croissant
                        </button>
                    {% endif %}
                </div>
            </form>
        </div>
    </div>
    <div class="my-4 grid grid-cols-3 gap-4 px-4">
        {% for prestation in prestations %}
            {% include 'prestation_card.twig' %}
        {% endfor %}
    </div>
{% endblock %}
